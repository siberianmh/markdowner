{
  "name": "smh-markdowner",
  "version": "0.0.0-development",
  "description": "Convert Markdown to GitHub-style HTML",
  "main": "./build/index.js",
  "repository": "https://github.com/siberianmh/markdowner",
  "types": "./build/index.d.ts",
  "author": "Siberian Media Holding, Inc.",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "prepare": "tsc",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "gray-matter": "^4.0.1",
    "pify": "^3.0.0",
    "remark": "^9.0.0",
    "remark-autolink-headings": "^5.0.0",
    "remark-gemoji-to-emoji": "^1.1.0",
    "remark-highlight.js": "^5.0.0",
    "remark-html": "^7.0.0",
    "remark-inline-links": "^3.0.4",
    "remark-slug": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/pify": "^3.0.2",
    "cheerio": "^1.0.0-rc.2",
    "jest": "^23.4.2",
    "semantic-release": "^15.9.2",
    "standard": "^11.0.1",
    "standard-markdown": "^4.0.2",
    "travis-deploy-once": "^5.0.1",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1"
  },
  "engines": {
    "node": ">= 8"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
