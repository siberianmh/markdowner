{
  "name": "smh-markdowner",
  "version": "0.0.0-development",
  "description": "Convert Markdown to GitHub-style HTML",
  "main": "./build/lib/index.js",
  "repository": "https://github.com/siberianmh/markdowner",
  "types": "./build/lib/index.d.ts",
  "author": "Siberian Media Holding, Inc.",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "test:report": "codecov",
    "prepublishOnly": "tsc",
    "lint": "prettier --check \"./**/*.{ts,js,yml}\" --write",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "gray-matter": "^4.0.2",
    "hasha": "^5.2.0",
    "json-stable-stringify": "^1.0.1",
    "remark": "^12.0.0",
    "remark-autolink-headings": "^6.0.0",
    "remark-gemoji-to-emoji": "^1.1.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^11.0.1",
    "remark-inline-links": "^4.0.0",
    "remark-slug": "^6.0.0",
    "remark-toc": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/node": "^14.0.1",
    "cheerio": "^1.0.0-rc.2",
    "codecov": "^3.2.0",
    "jest": "^26.0.1",
    "jest-junit": "^11.0.0",
    "level": "^6.0.0",
    "prettier": "^2.0.2",
    "semantic-release": "^17.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^3.3.3333"
  },
  "engines": {
    "node": ">= 10"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "./test-results/jest/junit.xml"
        }
      ]
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
