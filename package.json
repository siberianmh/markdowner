{
  "name": "smh-markdowner",
  "version": "0.0.0-development",
  "description": "Convert Markdown to GitHub-style HTML",
  "main": "./build/lib/index.js",
  "repository": "https://github.com/siberianmh/markdowner",
  "types": "./build/lib/index.d.ts",
  "author": "Siberian Media Holding, Inc.",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "test:report": "codecov",
    "prepublishOnly": "tsc",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "gray-matter": "^4.0.2",
    "hasha": "^5.0.0",
    "remark": "^10.0.1",
    "remark-autolink-headings": "^5.1.0",
    "remark-gemoji-to-emoji": "^1.1.0",
    "remark-highlight.js": "^5.1.0",
    "remark-html": "^9.0.0",
    "remark-inline-links": "^3.1.2",
    "remark-slug": "^5.1.1",
    "remark-toc": "^5.1.1"
  },
  "peerDependencies": {
    "level": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.10",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/node": "^12.0.0",
    "cheerio": "^1.0.0-rc.2",
    "codecov": "^3.2.0",
    "jest": "^24.3.1",
    "jest-junit": "^6.3.0",
    "json-stable-stringify": "^1.0.1",
    "level": "^5.0.1",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "engines": {
    "node": ">= 8"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "./test-results/jest/junit.xml"
        }
      ]
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
